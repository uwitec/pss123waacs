<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th><%= t 'label.order.order_no' %></th>
		<th><%= t 'label.order.issued_on'%></th>
		<th><%= t 'label.order.customer_code' %></th>
		<th><%= t 'label.order.store_code' %></th>
		<th><%= t 'label.order.goods_code' %></th>
		<th><%= t 'label.order.order_qty' %></th>
		<th><%= t 'label.order.ware_house' %></th>
		<th>&nbsp;</th>
	</tr>
	
	<% row = 1 %>

	<% for order in orders %>
		<tr class="<%= casein_table_row_class_name row %> hover">
			<td><%= casein_table_cell_link order.order_no, order %></td>
			<td><%= casein_table_cell_link order.issued_on, order %></td>
			<td><%= casein_table_cell_link order.customer_code, order %></td>
			<td><%= casein_table_cell_link order.store_code, order %></td>
			<td><%= casein_table_cell_link order.goods_code, order %></td>
			<td><%= casein_table_cell_link order.order_qty, order %></td>
			<td><%= casein_table_cell_link order.show_ware_house_name, order %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_order_path(order), :method => :delete, :confirm => "Are you sure you want to delete this order?") %>
			</td>
		</tr>
		<% row += 1 %>
	<% end %>
</table>
