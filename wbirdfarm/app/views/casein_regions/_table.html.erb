<!-- Scaffolding generated by Casein v.2.0.6 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th><%= t 'label.region.name' %></th>
		<th><%= t 'label.region.code' %></th>
		<th>&nbsp;</th>
	</tr>
	
	<% row = 1 %>

	<% for region in regions %>
		<tr class="<%= casein_table_row_class_name row %> hover">
			<td><%= casein_table_cell_link region.name, region %></td>
			<td><%= casein_table_cell_link region.code, region %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_region_path(region), :method => :delete, :confirm => "Are you sure you want to delete this region?") %>
			</td>
		</tr>
		<% row += 1 %>
	<% end %>
</table>
