<div class="list">
<table width="100%">
	<thead>
		<tr>
			<th><%= t('label.edi_file.ware_house') %></th>
			<th><%= t('label.edi_file.class_name') %></th>
			<th>&nbsp;</th>
			<th><%= t('label.edi_file.edi_code') %></th>
			<th>&nbsp;</th>
			<th><%= t('label.edi_file.edi_at') %></th>
			<th><%= t('label.edi_file.show_status') %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		<% for edi_file in @edi_files %>
			<tr>
				<td><%= edi_file.ware_house.name rescue '-' %></td>
				<td><%= edi_file.show_class_name %></td>
				<td><%= edi_file.show_sub_class_name %></td>
				<td>
					<% if File.exist?(edi_file.file_path.to_s) %>
						<%= link_to edi_file.edi_code, {:action => 'download', :file => edi_file.file_path} %>
					<% else %>
						<%= edi_file.edi_code %>
					<% end %>
				</td>
				<td>
					<% if File.exist?(edi_file.pdf_path.to_s) %>
						<%= link_to 'PDF', {:action => 'download', :file => edi_file.pdf_path} %>
					<% else %>
						-
					<% end %>
				</td>
				<td><%= show_time edi_file.edi_at %></td>
				<td><%= edi_file.status rescue '-' %></td>
				<td>&nbsp;</td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>
