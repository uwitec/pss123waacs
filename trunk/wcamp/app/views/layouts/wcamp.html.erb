			<div id="topnav">
				<%= render :partial => "shared/menu" %>
			</div>
			<div id="message">
				<%= render :partial => "shared/message" %>
			</div>
		</div>
		<div id="bd">
			<div class="yui3-main">
				<%= yield %>
			</div>
		</div>
	</div>
