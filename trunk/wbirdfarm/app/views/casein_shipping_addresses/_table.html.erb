<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th><%= t 'label.shipping_address.name' %></th>
		<th><%= t 'label.shipping_address.customer_code' %></th>
		<th><%= t 'label.shipping_address.code' %></th>
		<th><%= t 'label.shipping_address.zip_code' %></th>
		<th><%= t 'label.shipping_address.picking_style' %></th>
		<th><%= t 'label.shipping_address.ware_house' %></th>
		<th><%= t 'label.shipping_address.is_fixed' %></th>
		<th>&nbsp;</th>
	</tr>
	
	<% row = 1 %>

	<% for shipping_address in shipping_addresses %>
		<tr class="<%= casein_table_row_class_name row %> hover">
			<td><%= casein_table_cell_link shipping_address.name, shipping_address %></td>
			<td><%= casein_table_cell_link shipping_address.customer_code, shipping_address %></td>
			<td><%= casein_table_cell_link shipping_address.code, shipping_address %></td>
			<td><%= casein_table_cell_link shipping_address.zip_code, shipping_address %></td>
			<td><%= casein_table_cell_link shipping_address.picking_style, shipping_address %></td>
			<td><%= casein_table_cell_link shipping_address.show_ware_house_name, shipping_address %></td>
			<td><%= casein_table_cell_link shipping_address.is_fixed, shipping_address %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_shipping_address_path(shipping_address), :method => :delete, :confirm => "Are you sure you want to delete this shipping address?") %>
			</td>
		</tr>
		<% row += 1 %>
	<% end %>
</table>
